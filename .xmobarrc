                    , Run Swap [] 10
                    , Run Date "%a %b %_d %k:%M" "date" 10
                    , Run StdinReader
                    , Run Com "~/.xmonad/bin/hudsonStatus.rb" [""]  "hudson" 10

                    ]
       , sepChar = "%"
       , alignSep = "}{"
